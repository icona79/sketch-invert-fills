{
    "name": "sketch-invert-fills",
    "description": "Invert fills beween 2 selected layers",
    "version": "1.0.0",
    "engines": {
        "sketch": ">=3.0"
    },
    "skpm": {
        "name": "Sketch Invert Fills",
        "manifest": "src/manifest.json",
        "main": "sketch-invert-fills.sketchplugin",
        "assets": [
            "assets/**/*"
        ],
        "sketch-assets-file": "sketch-assets/icons.sketch"
    },
    "scripts": {
        "build": "skpm-build",
        "watch": "skpm-build --watch",
        "start": "skpm-build --watch",
        "postinstall": "npm run build && skpm-link"
    },
    "devDependencies": {
        "@skpm/builder": "^0.7.4",
        "@skpm/extract-loader": "^2.0.2"
    },
    "resources": [
        "resources/**/*.js"
    ],
    "dependencies": {
        "@skpm/fs": "^0.2.6",
        "@types/node": "17.0.23"
    },
    "author": "Matteo Gratton <icona79@gmail.com>",
    "repository": {
        "type": "git",
        "url": "https://github.com/icona79/sketch-invert-fills.git"
    }
}
